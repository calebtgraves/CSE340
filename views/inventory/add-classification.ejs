<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!--messages-->
<%- messages() %>

<!-- add classification view -->
<div class="add-classification">
  <form action="/inv/add-classification" method="post">
    <div class="form-group">
      <label for="classification_name">Classification Name</label>
      <input type="text" id="classification_name" name="classification_name" pattern="[a-zA-Z0-9]+" placeholder="Enter Classification Name..." required>
      <p>The new classification name cannot contain a space or special character of any kind.</p>
    </div>
    <div class="form-group">
      <button type="submit">Add Classification</button>
    </div>
  </form>
</div>