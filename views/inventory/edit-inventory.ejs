<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!--messages-->
<%- messages() %>

<!-- edit inventory view-->
<div class="edit-inventory" id="updateForm">
  <img src="<%= inv_image %>" alt="<%= inv_make %> <%= inv_model %>">
  <form action="/inv/update" method="post">
    <div class="form-group">
      <label for="inv_year">Year</label>
      <input type="number" id="inv_year" name="inv_year" placeholder="Enter Inventory Year..." value=<%= inv_year %> required>
    </div>
    <div class="form-group">
      <label for="inv_make">Make</label>
      <input type="text" id="inv_make" name="inv_make" placeholder="Enter Inventory Make..." value=<%= inv_make %> required>
    </div>
    <div class="form-group">
      <label for="inv_model">Model</label>
      <input type="text" id="inv_model" name="inv_model" placeholder="Enter Inventory Model..." value=<%= inv_model %> required>
    </div>
    <div class="form-group">
      <label for="classification">Classification</label>
      <%- classification_list %>
    </div>
    <div class="form-group">
      <label for="inv_miles">Mileage</label>
      <input type="number" id="inv_miles" name="inv_miles" placeholder="Enter Inventory Mileage..." value=<%= inv_miles %> required>
    </div>
    <div class="form-group">
      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description" placeholder="Enter Inventory Description..." required><%= inv_description %></textarea>
    </div>
    <div class="form-group">
      <label for="inv_color">Color</label>
      <input type="text" id="inv_color" name="inv_color" placeholder="Enter Inventory Color..." value=<%= inv_color %> required>
    </div>
    <div class="form-group">
      <label for="inv_price">Price</label>
      <input type="number" id="inv_price" name="inv_price" placeholder="Enter Inventory Price..." value=<%= inv_price %> required>
    </div>
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
    <input type="hidden" name="inv_image" <% if(locals.inv_image) { %> value="<%= locals.inv_image %>" <% } %>>
    <input type="hidden" name="inv_thumbnail" <% if(locals.inv_thumbnail) { %> value="<%= locals.inv_thumbnail %>" <% } %>>
    <div class="form-group">
      <button type="submit" disabled>Update Inventory</button>
    </div>
  </form>
</div>
<script src="../../js/inv-update.js"></script>