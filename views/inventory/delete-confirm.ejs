<% if (title) { %>
<h1><%= title %></h1>
<% } else {
        res.redirect('/')
    } %>

<!--messages-->
<%- messages() %>

<!-- delete confirm view-->
<div class="delete-confirm">
  <form action="/inv/delete/<%= inv_id %>" method="post">
    <div class="form-group">
      <label for="inv_year">Year</label>
      <input type="number" id="inv_year" name="inv_year" placeholder="Enter Inventory Year..." value=<%= inv_year %> required readonly>
    </div>
    <div class="form-group">
      <label for="inv_make">Make</label>
      <input type="text" id="inv_make" name="inv_make" placeholder="Enter Inventory Make..." value=<%= inv_make %> required readonly>
    </div>
    <div class="form-group">
      <label for="inv_model">Model</label>
      <input type="text" id="inv_model" name="inv_model" placeholder="Enter Inventory Model..." value=<%= inv_model %> required readonly>
    </div>
    <div class="form-group">
      <label for="inv_price">Price</label>
      <input type="number" id="inv_price" name="inv_price" placeholder="Enter Inventory Price..." value=<%= inv_price %> required readonly>
    </div>
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
    <div class="form-group">
      <p>Confirm Deletion - The delete is permanent.</p>
      <button type="submit">Delete Inventory</button>
    </div>
  </form>
</div>